<div class="page-header">
  <h1>Nuevo artículo</h1>
</div>

<div class="row">
  <div class="col-md-6">
    <form action="/articles" method="POST">
      <p class="text-muted">
        Todos los campos con * son obligatorios.
      </p>
      <div class="form-group <%= "has-error" if @form.has_name_errors? %>">
        <label for="name">* Nombre</label>
        <input type="text" class="form-control" name="name" id="name" value="<%= @form.name %>">
        <% if @form.has_name_errors? %>
          <span class="help-block"><%= @form.name_errors %></span>
        <% end %>
      </div>
      <div class="form-group <%= "has-error" if @form.has_code_errors? %>">
        <label for="code">Código</label>
        <input type="text" class="form-control" name="code" id="code" value="<%= @form.code %>">
        <% if @form.has_code_errors? %>
          <span class="help-block"><%= @form.code_errors %></span>
        <% end %>
      </div>
      <div class="form-group <%= "has-error" if @form.has_quantity_errors? %>">
        <label for="quantity">Cantidad</label>
        <input type="text" class="form-control" name="quantity" id="quantity" value="<%= @form.quantity %>">
        <% if @form.has_quantity_errors? %>
          <span class="help-block"><%= @form.quantity_errors %></span>
        <% end %>
      </div>
      <button type="submit" class="btn btn-default">Agregar</button>
    </form>
  </div>
</div>
